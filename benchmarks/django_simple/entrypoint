#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

# Install ddtrace
if [[ -z "${DDTRACE_VERSION}" ]]; then
    if [[ -z "${ARTIFACTS_WHEELS}" ]]; then
        pip install ddtrace
    else
        pip install --no-cache-dir --no-index --find-links=${ARTIFACTS_WHEELS} ${ARTIFACTS_WHEELS}/*
    fi
else
    pip install git+https://github.com/Datadog/dd-trace-py@${DDTRACE_VERSION}
fi

exec "$@"

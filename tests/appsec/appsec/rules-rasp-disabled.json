      "name": "Datadog test scanner - blocking version: user-agent",
      "tags": {
        "type": "attack_tool",
        "category": "attack_attempt",
        "cwe": "200",
        "capec": "1000/118/169",
        "tool_name": "Datadog Canary Test",

    {
      "id": "apiA-100-001",
      "name": "API 10 downstream request headers",
      "tags": {
        "type": "api10 request headers",
        "category": "attack_attempt"
      },
      "conditions": [
        {
          "parameters": {
            "inputs": [
              {
                "address": "server.io.net.request.headers",
                "key_path": [
                  "host"
                ]
              },
              {
                "address": "server.io.net.request.headers",
                "key_path": [
                  "tagroute"
                ]
              }
            ],
            "list": [
              "www.datadoghq.com",
              "request-headers"
            ]
          },
          "operator": "exact_match"
        }
      ],
      "output": {
        "event": true,
        "keep": true,
        "attributes": {
          "_dd.appsec.trace.mark": {
            "value": "TAG_API10_REQ_HEADERS"
          }
        }
      },
      "on_match": []
    },
